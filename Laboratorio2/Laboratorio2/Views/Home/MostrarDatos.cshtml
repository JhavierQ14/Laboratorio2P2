
@{
    ViewData["Title"] = "MostrarDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <title>Document</title>
</head>


<body>
    <h2 class="animate__animated animate__fadeInDown"><i class="fas fa-boxes"></i>Datos almacenados</h2>


    <table id="mitabla" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Edad
                </th>
                <th>
                    Descripcion
                </th>
            </tr>

        </thead>

    </table>
    @section scripts{

        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script>
        $(document).ready(function () {
            var tabla = $('#mitabla').DataTable({
                "ajax": {
                    "url": '/Home/GetAll',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idPersona", "name": "idPersona", "autoWidth": true },
                    { "data": "nombrePersona", "name": "nombrePersona", "autoWidth": true },
                    { "data": "edadPersona", "name": "edadPersona", "autoWidth": true },
                     { "data": "descripcionPersona", "name": "descripcionPersona", "autoWidth": true }
                ]
            });
        });

        </script>
    }
</body>
</html>